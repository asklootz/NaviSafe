@model NaviSafe.Models.ObstacleDataForm
@{
    ViewData["Title"] = "Overview";
}

<section class="mx-auto max-w-2xl">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6 space-y-4">
        <header>
            <h1 class="text-2xl font-semibold">Overview</h1>
            <p class="text-gray-600 mt-1">Thank you for registering an obstacle:</p>
        </header>

        <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Obstacle Name</dt>
                <dd class="mt-1 text-base text-gray-900 break-words">@Model.shortDesc</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Height (m)</dt>
                <dd class="mt-1 text-base text-gray-900">@Model.longDesc</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Description</dt>
                <dd class="mt-1 text-base text-gray-900 break-words sm:col-span-3">@Model.altitude</dd>
            </div>
        </dl>

        <div class="space-y-3">
            <label class="block text-sm font-medium text-gray-800">Geometry (map)</label>
            <div id="overview-map" style="height: 420px; border-radius: 0.75rem; overflow: hidden; border: 1px solid #e5e7eb;"></div>
        </div>

        <div class="space-y-2">
            <label for="OverviewCoordinates" class="block text-sm font-medium text-gray-800">Geometry (raw GeoJSON)</label>
            <textarea id="OverviewCoordinates" class="block w-full rounded-lg border-gray-300 px-3 py-2 text-sm" rows="8" readonly>@Model.geoJSON</textarea>
        </div>

        <div class="pt-2">
            <a asp-controller="Home" asp-action="Index"
               class="inline-flex items-center rounded-lg px-4 py-2 ring-1 ring-gray-300 hover:bg-gray-50">
                Back to Home
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <!-- Link to Leaflet CSS -->
    <!--<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.css"
              crossorigin=""/>
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"
            crossorigin=""></script>-->
    <link rel="stylesheet" href="~/lib/leaflet/dist/leaflet.css" crossorigin=""/>
    <script>
        (function () {
          // Map + basemap
          let map = L.map('overview-map').setView([20, 0], 2);
          L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; OpenStreetMap contributors'
          }).addTo(map);

          // Get the saved GeoJSON string
          let jsontext = document.getElementById('OverviewCoordinates').value;

          // Parse and render markers
          let fc = JSON.parse(jsontext);
          let layer = L.geoJSON(fc, {
            pointToLayer: function (feature, latlng) {
              return L.marker(latlng);
            }
          }).addTo(map);
        })();
    </script>
}
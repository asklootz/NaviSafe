@{
ViewData["Title"] = "Admin Dashboard";
Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="~/css/obstacle-form.css" />
</head>

<body class="page-bg">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white rounded-bottom-3 container-fluid">
        <div class="container-fluid">
            <img src="~/NaviSafeIcon.svg" alt="NaviSafe Logo" class="brand-logo me-2"/>
            <div class="text-center"><a class="navbar-brand fw-semibold " asp-area="" asp-controller="Home" asp-action="Index">NaviSafe</a><br/><a class="navbar-brand">Admin</a></div>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            </div>
            <div class="align-content-md-center">
                <h1 class="fs-3 fw-semibold mb-1 text-center">NaviSafe Admin Page</h1>
                @* <p class="text-decoration-underline mb-0 text-center">Fields with <span class="text-danger">*</span> must be filled</p> *@
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    
            </div>
            @* <button class="btn btn-report fs-3" type="button"><i class="bi bi-list fs-2 me-3"></i>My Registrations</button> *@
        </div>
    </nav>
</header>

<!-- Admin Dashboard (for Kartverket) -->
  <div id="adminDashboard" style="display: none;">
    <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">
          <img src="~/NaviSafeIcon.svg" alt="NaviSafe" class="navbar-logo me-2">
          NaviSafe Administration
        </span>
        <div>
          <button class="btn btn-outline-light btn-sm me-2" id="backToMapBtn">
            <i class="bi bi-map"></i> Back to Map
          </button>
          <button class="btn btn-outline-light btn-sm" id="adminLogoutBtn">
            <i class="bi bi-box-arrow-right"></i> Logout
          </button>
        </div>
      </div>
    </nav>
    
    <!-- Admin map container (initially hidden if you want) -->
    <div id="adminMapContainer" style="display: none; margin-top: 1rem;">
      <div id="adminMap" style="height: 500px; border-radius: 12px; overflow: hidden; border: 1px solid #dee2e6;"></div>
    </div>

    <div class="container-fluid py-4">
      <div class="row mb-4">
        <div class="col-md-3">
          <div class="card">
            <div class="card-body">
              <h6 class="text-muted">Total Reports</h6>
              <h2 id="totalReports">0</h2>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card">
            <div class="card-body">
              <h6 class="text-muted">Pending Review</h6>
              <h2 class="text-warning" id="pendingReports">0</h2>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card">
            <div class="card-body">
              <h6 class="text-muted">Approved</h6>
              <h2 class="text-success" id="approvedReports">0</h2>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card">
            <div class="card-body">
              <h6 class="text-muted">Rejected</h6>
              <h2 class="text-danger" id="rejectedReports">0</h2>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header bg-light">
          <div class="row align-items-center">
            <div class="col-md-3">
              <h5 class="mb-0">Obstacle Reports</h5>
            </div>
            <div class="col-md-9">
              <div class="row g-2">
                <div class="col">
                  <select class="form-select form-select-sm" id="filterStatus">
                    <option value="">All Statuses</option>
                    <option value="Pending">Pending Review</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                  </select>
                </div>
                <div class="col">
                  <select class="form-select form-select-sm" id="filterOrganization">
                    <option value="">All Organizations</option>
                    <option value="NAA">Norwegian Air Ambulance</option>
                    <option value="AirForce">Air Force</option>
                    <option value="Police">Police</option>
                  </select>
                </div>
                <div class="col">
                  <select class="form-select form-select-sm" id="filterType">
                    <option value="">All Types</option>
                    <option value="Mast">Mast</option>
                    <option value="PowerLine">Power Line</option>
                    <option value="WindTurbine">Wind Turbine</option>
                    <option value="Building">Building</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Date</th>
                  <th>Type</th>
                  <th>Description</th>
                  <th>Reporter</th>
                  <th>Organization</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody id="reportsTableBody">
                <!-- Reports will be loaded here -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Report Detail Modal -->
  <div class="modal fade" id="reportDetailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Report Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-6">
              <div id="reportDetailMap" style="height: 300px; border-radius: 8px;"></div>
            </div>
            <div class="col-md-6">
              <div id="reportDetailContent">
                <!-- Content will be loaded dynamically -->
              </div>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-12">
              <h6>Case Management</h6>
              <div class="mb-3">
                <label for="assignTo" class="form-label">Assign To</label>
                <select class="form-select" id="assignTo">
                  <option value="">Select handler...</option>
                  <option value="admin1">Admin 1</option>
                  <option value="admin2">Admin 2</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="adminComment" class="form-label">Comment/Feedback</label>
                <textarea class="form-control" id="adminComment" rows="3"></textarea>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-danger" id="rejectReportBtn">
            <i class="bi bi-x-circle"></i> Reject
          </button>
          <button type="button" class="btn btn-success" id="approveReportBtn">
            <i class="bi bi-check-circle"></i> Approve
          </button>
        </div>
      </div>
    </div>
  </div>
</body>
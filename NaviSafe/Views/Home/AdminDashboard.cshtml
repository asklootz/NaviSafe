@model IEnumerable<NaviSafe.Data.ObstacleData>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin-dashboard.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
</head>

<body class="page-bg">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white fixed-top shadow-sm">
            <div class="container-fluid">
                <img src="~/NaviSafeIcon.svg" alt="NaviSafe Logo" class="brand-logo me-2" />
                <div class="text-center">
                    <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">NaviSafe</a>
                    <br />
                    <a class="navbar-brand">Admin Dashboard</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <button class="btn btn-outline-primary btn-sm me-2" id="mapButton">
                                <i class="bi bi-map"></i> Show Map
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="btn btn-outline-danger btn-sm" asp-action="Logout" asp-controller="Account">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid py-5 mt-5">
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="text-muted">Total Reports</h6>
                        <h2>@Model.Count()</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="text-muted">Pending Review</h6>
                        <h2 class="text-warning">@Model.Count(r => r.State == "PENDING")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="text-muted">Approved</h6>
                        <h2 class="text-success">@Model.Count(r => r.State == "SENT")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="text-muted">Rejected</h6>
                        <h2 class="text-danger">@Model.Count(r => r.State == "REJECTED")</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-light">
                <div class="row align-items-center">
                    <div class="col-md-3">
                        <h5 class="mb-0">Obstacle Reports</h5>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="reportsTable">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Latitude</th>
                                <th>Longitude</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model)
                            {
                                <tr>
                                    <td>@report.regID</td>
                                    <td>@report.ShortDesc</td>
                                    <td>@report.LongDesc</td>
                                    <td>@report.Lat</td>
                                    <td>@report.Lon</td>
                                    <td>@report.State</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary view-report" data-id="@report.regID">View</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Map Modal -->
        <div class="modal fade" id="mapModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Obstacle Reports Map</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div id="map" style="height: 500px;"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Report Detail Modal -->
        <div class="modal fade" id="reportDetailModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Report Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p id="reportDetails"></p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        $(document).ready(function () {
            const reports = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));

            // View Report Details
            $('.view-report').on('click', function () {
                const reportId = $(this).data('id');
                const selectedReport = reports.find(r => r.regID === reportId);
                $('#reportDetails').text(JSON.stringify(selectedReport, null, 2));
                $('#reportDetailModal').modal('show');
            });

            // Show Map Modal
            $('#mapButton').on('click', function () {
                $('#mapModal').modal('show');
                const map = L.map('map').setView([59.9139, 10.7522], 13);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    maxZoom: 19
                }).addTo(map);

                reports.forEach(report => {
                    const marker = L.marker([report.Lat, report.Lon], {
                        icon: L.divIcon({
                            className: 'custom-marker',
                            html: `<div style="background-color: ${getMarkerColor(report.State)}; width: 20px; height: 20px; border-radius: 50%;"></div>`
                        })
                    }).addTo(map);
                });
            });

            function getMarkerColor(state) {
                switch (state) {
                    case 'PENDING': return 'yellow';
                    case 'SENT': return 'green';
                    case 'REJECTED': return 'red';
                    default: return 'gray';
                }
            }
        });
    </script>
</body>